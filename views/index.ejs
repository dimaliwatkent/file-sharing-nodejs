<!doctype html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="css/style.css" rel="stylesheet" />
  </head>
  <body>

    <% if (locals.fileLink !=null){%> 
    <div style="margin-bottom: 1rem;">
      Your file is uploaded
      <a href="<%= locals.fileLink %>"> <%= locals.fileLink %> </a>
    </div>
    <% } %>

    <form action="/upload" method="post" enctype="multipart/form-data" style="display: grid; gap: .5rem; grid-template-columns: auto 1fr; max-width: 500px; margin: 0 auto;"
    >
      <label for="file">File:</label>
      <input type="file" id="file" name="file" required />
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" />
      <button style="grid-column: span 2;" type="submit">Share</button>
    </form>
  </body>
</html>
